---
interface Props {
  title?: string;
  subtitle?: string;
  image?: string;
}

const { 
  title = "Blank.428",
  subtitle = "Con dốc nhạt nhoà",
  image = "/images/banner.webp"
} = Astro.props;
---

<div id="hero-banner">
  <div class="banner-image-wrapper">
    <picture>
      <source media="(max-width: 600px)" srcset="/images/banner-600w.webp" />
      <source media="(max-width: 800px)" srcset="/images/banner-800w.webp" />
      <img 
        src={image}
        alt={title}
        class="banner-image"
        fetchpriority="high"
      />
    </picture>
  </div>
  <div class="banner-content">
    <h1 class="banner-title">{title}</h1>
    <p class="banner-subtitle">{subtitle}</p>
  </div>
</div>

<style>
  #hero-banner {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    margin-bottom: -200px;
    margin-top: calc(var(--header-height) * -1);
    padding-top: var(--header-height);
  }

  @media (max-width: 768px) {
    #hero-banner {
      height: 100vh;
      margin-bottom: -300px;
      margin-top: -50px;
      padding-top: 50px;
    }
  }

  .banner-image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: linear-gradient(135deg, #1a1a1a, #2d2d2d);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .banner-image-wrapper {
      background: transparent;
    }
  }

  .banner-image-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(0, 0, 0, 0.2) 30%,
      rgba(0, 0, 0, 0.5) 70%,
      rgba(0, 0, 0, 0.8) 100%
    );
    z-index: 1;
  }

  .banner-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    transition: transform 0.5s ease;
  }

  @media (max-width: 768px) {
    .banner-image {
      width: 120%;
      height: auto;
      object-fit: cover;
      object-position: center top;
      margin-left: -10%;
    }
  }

  #hero-banner:hover .banner-image {
    transform: scale(1.05);
  }

  .banner-content {
    position: absolute;
    top: 25%;
    left: 0;
    right: 0;
    z-index: 2;
    padding: 2rem;
    color: white;
    text-align: center;
    transform: translateY(-50%);
  }

  @media (max-width: 768px) {
    .banner-content {
      padding: 1.5rem;
      top: 20%;
    }
  }

  .banner-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.8);
    background: linear-gradient(135deg, #fff, var(--red-1));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: glow 3s ease-in-out infinite alternate;
  }

  @media (max-width: 768px) {
    .banner-title {
      font-size: 2rem;
    }
  }

  @keyframes glow {
    from {
      filter: drop-shadow(0 0 10px rgba(255, 82, 82, 0.5));
    }
    to {
      filter: drop-shadow(0 0 20px rgba(255, 82, 82, 0.8));
    }
  }

  .banner-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.8);
    margin: 0;
  }

  @media (max-width: 768px) {
    .banner-subtitle {
      font-size: 1.1rem;
    }
  }
</style>
