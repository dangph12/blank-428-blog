---
import { Calendar } from '@lucide/astro';
import { stegaClean } from '@sanity/client/stega';

interface Props {
  title: string;
  excerpt?: string;
  date?: string;
  href: string;
  image?: string;
  index?: number;
}

const { title, excerpt: rawExcerpt, date, href, image, index = 0 } = Astro.props;
const isOdd = index % 2 === 1;

// Clean stega, then prevent lonely words
const excerpt = rawExcerpt 
  ? stegaClean(rawExcerpt).trim().replace(/\s(\S+)$/, '\u00A0$1')
  : undefined;
---

<article class={`post-card ${isOdd ? 'right' : 'left'}`}>
  <a href={href} class="card-link" aria-label={title}>
    {image && (
      <div class={`card-image ${isOdd ? 'right' : 'left'}`}>
        <img src={image} alt={title} loading="lazy" width="400" height="200" />
      </div>
    )}
    <div class="card-content">
      <h3 class="card-title">{title}</h3>
      {excerpt && <p class="card-excerpt">{excerpt}</p>}
      {date && (
        <time class="card-date" datetime={date}>
          <Calendar size={16} />
          {new Date(date).toLocaleDateString('vi-VN', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
      )}
    </div>
  </a>
</article>

<style>
  .post-card {
    position: relative;
    background: var(--color-wrap);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: var(--shadow-card);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    height: 200px;
  }

  @media (max-width: 768px) {
    .post-card {
      height: 400px;
    }
  }

  .post-card.left {
    flex-direction: row;
  }

  .post-card.right {
    flex-direction: row-reverse;
  }

  @media (max-width: 768px) {
    .post-card,
    .post-card.left,
    .post-card.right {
      flex-direction: column;
    }
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-card-hover);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    width: 100%;
    position: relative;
  }

  .post-card.left .card-link {
    flex-direction: row;
  }

  .post-card.right .card-link {
    flex-direction: row-reverse;
  }

  @media (max-width: 768px) {
    .card-link,
    .post-card.left .card-link,
    .post-card.right .card-link {
      flex-direction: column;
    }
  }

  .card-image {
    width: 45%;
    height: 100%;
    overflow: hidden;
    background: var(--color-background);
    position: relative;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .card-image {
      width: 100%;
      height: 200px;
    }
  }

  .card-image::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(255, 82, 82, 0.1) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .post-card:hover .card-image::after {
    opacity: 1;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .post-card:hover .card-image img {
    transform: scale(1.1);
  }

  .card-content {
    flex: 1;
    padding: 1rem 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .card-content {
      padding: 1rem;
    }
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    color: var(--color-default);
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  @media (max-width: 768px) {
    .card-title {
      font-size: 1.25rem;
    }
  }

  .post-card:hover .card-title {
    color: var(--red-1);
  }

  .card-excerpt {
    color: var(--grey-9);
    font-size: 0.9rem;
    font-style: italic;
    line-height: 1.6;
    margin: 0 0 0.75rem 0;
    text-align: left;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }

  .card-date {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--grey-9);
    padding: 0.5rem 1rem;
    background: var(--color-background);
    border-radius: 20px;
    width: fit-content;
    transition: all 0.3s ease;
  }

  .post-card:hover .card-date {
    background: var(--red-5);
    color: var(--red-1);
  }
</style>