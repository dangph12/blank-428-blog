---
// ./src/pages/post/[slug].astro
import type { SanityDocument } from "@sanity/client";
import { stegaClean } from '@sanity/client/stega';
import { loadQuery } from "~/lib/load-query";
import Layout from "~/layouts/Layout.astro";
import PortableText from "~/components/PortableText.astro";
import AnimatedSection from "~/components/AnimatedSection.astro";

export async function getStaticPaths() {
  const { data: posts } = await loadQuery<SanityDocument[]>({
    query: `*[_type == "post"]`,
  });

  return posts.map(({ slug }) => {
    return {
      params: {
        slug: slug.current,
      },
    };
  });
}

const { params } = Astro;

const { data: post } = await loadQuery<{ 
  title: string; 
  body: any[];
  publishedAt?: string;
  author?: { name: string };
  excerpt?: string;
}>({
  query: `*[_type == "post" && slug.current == $slug][0]{
    title,
    body,
    publishedAt,
    excerpt,
    "author": author->name
  }`,
  params,
});

// Prevent lonely words by replacing last space with non-breaking space
const processedPost = {
  ...post,
  excerpt: post.excerpt 
    ? stegaClean(post.excerpt).trim().replace(/\s(\S+)$/, '\u00A0$1')
    : post.excerpt
};

// Get all posts to determine prev/next
const { data: allPosts } = await loadQuery<Array<{
  _id: string;
  title: string;
  slug: { current: string };
  publishedAt?: string;
  mainImage?: { asset: { url: string } };
}>>({
  query: `*[_type == "post"] | order(publishedAt desc) {
    _id,
    title,
    slug,
    publishedAt,
    mainImage {
      asset-> {
        url
      }
    }
  }`,
});

// Find current post index and get prev/next
const currentIndex = allPosts.findIndex(p => p.slug.current === params.slug);
const prevPost = currentIndex > 0 ? allPosts[currentIndex - 1] : null;
const nextPost = currentIndex < allPosts.length - 1 ? allPosts[currentIndex + 1] : null;
---

<Layout title={processedPost.title}>
  <article class="post-article">
    <div class="container">
      <AnimatedSection animation="fade-up" duration={0.8}>
        <header class="post-header">
          <h1 class="post-title">{processedPost.title}</h1>
          
          {processedPost.excerpt && (
            <p class="post-excerpt">{processedPost.excerpt}</p>
          )}
          
          <div class="post-meta">
            {processedPost.publishedAt && (
              <time class="post-date" datetime={processedPost.publishedAt}>
                {new Date(processedPost.publishedAt).toLocaleDateString('vi-VN', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            )}
            {processedPost.author && (
              <>
                <span class="meta-separator">•</span>
                <span class="post-author">{processedPost.author}</span>
              </>
            )}
          </div>
        </header>
      </AnimatedSection>

      <AnimatedSection animation="fade-in" delay={0.3}>
        <div class="post-content">
          <PortableText value={processedPost.body} />
        </div>
      </AnimatedSection>

      <AnimatedSection animation="fade-up" delay={0.5}>
        <nav class="post-navigation">
          {prevPost && (
            <a href={`/posts/${prevPost.slug.current}`} class="nav-link prev-post">
              <div class="nav-content">
                {prevPost.mainImage?.asset?.url && (
                  <div class="nav-image">
                    <img src={prevPost.mainImage.asset.url} alt={prevPost.title} />
                  </div>
                )}
                <div class="nav-text">
                  <span class="nav-label">Bài viết trước</span>
                  <span class="nav-title">{prevPost.title}</span>
                </div>
              </div>
            </a>
          )}
          
          {nextPost && (
            <a href={`/posts/${nextPost.slug.current}`} class="nav-link next-post">
              <div class="nav-content">
                <div class="nav-text">
                  <span class="nav-label">Bài viết sau</span>
                  <span class="nav-title">{nextPost.title}</span>
                </div>
                {nextPost.mainImage?.asset?.url && (
                  <div class="nav-image">
                    <img src={nextPost.mainImage.asset.url} alt={nextPost.title} />
                  </div>
                )}
              </div>
            </a>
          )}
        </nav>

        <div class="post-footer">
          <a href="/" class="back-link">← Back to Home</a>
        </div>
      </AnimatedSection>
    </div>
  </article>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .post-article {
    padding: 2rem 0;
  }

  .post-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
    color: var(--color-default);
  }

  .post-excerpt {
    font-size: 1.25rem;
    color: var(--grey-9);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-style: italic;
    word-spacing: normal;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    font-size: 0.95rem;
    color: var(--grey-9);
  }

  .meta-separator {
    color: var(--color-border);
  }

  .post-date,
  .post-author {
    font-weight: 500;
  }

  .post-content {
    background: var(--color-wrap);
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    margin-bottom: 3rem;
    line-height: 1.8;
  }

  .post-content :global(p) {
    margin-bottom: 1.25rem;
    color: var(--color-default);
  }

  .post-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
  }

  .post-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(a) {
    color: var(--red-1);
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 2px;
    transition: opacity 0.2s ease;
  }

  .post-content :global(a:hover) {
    opacity: 0.7;
  }

  .post-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .nav-link {
    display: block;
    text-decoration: none;
    background: var(--color-wrap);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow-card);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
  }

  .nav-link:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-card-hover);
  }

  .nav-link:only-child {
    grid-column: span 2;
    max-width: 50%;
  }

  .prev-post:only-child {
    justify-self: start;
  }

  .next-post:only-child {
    justify-self: end;
  }

  .nav-content {
    display: flex;
    align-items: center;
    height: 100%;
    min-height: 120px;
  }

  .prev-post .nav-content {
    flex-direction: row;
  }

  .next-post .nav-content {
    flex-direction: row-reverse;
  }

  .nav-image {
    width: 160px;
    height: 120px;
    flex-shrink: 0;
    overflow: hidden;
    background: var(--color-background);
  }

  .nav-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .nav-link:hover .nav-image img {
    transform: scale(1.1);
  }

  .nav-text {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav-label {
    font-size: 0.875rem;
    color: var(--grey-9);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .nav-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-default);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--red-1);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--grey-9);
  }

  .post-content :global(code) {
    background: var(--color-code-background);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .post-content :global(pre) {
    background: var(--color-code-background);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-content :global(img) {
    border-radius: 8px;
    margin: 2rem auto;
    box-shadow: var(--shadow-card);
  }

  .post-footer {
    text-align: center;
    padding-top: 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--red-1);
    font-weight: 600;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    background: var(--color-wrap);
    border-radius: 8px;
    box-shadow: var(--shadow-card);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .back-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-card-hover);
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-excerpt {
      font-size: 1.1rem;
    }

    .post-content {
      padding: 1.5rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .meta-separator {
      display: none;
    }

    .post-navigation {
      grid-template-columns: 1fr;
    }

    .nav-link:only-child {
      grid-column: span 1;
      max-width: 100%;
    }

    .prev-post:only-child,
    .next-post:only-child {
      justify-self: stretch;
    }

    .nav-content {
      min-height: 100px;
    }

    .nav-image {
      width: 100px;
      height: 100px;
    }

    .nav-text {
      padding: 1rem;
    }

    .nav-title {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .post-title {
      font-size: 1.75rem;
    }

    .post-content {
      padding: 1.25rem;
    }
  }
</style>